  {{#if data.dictionary.shortdef}}

    {{#if data.dictionary.cons}}
    <h4 class="dictionary__header">{{data.dictionary.cons}}</h4>
    {{/if}}

    {{#if data.dictionary.pronunciation}}
    <h5 class="dictionary__pronunciation">[/{{data.dictionary.pronunciation}}/]</h5>
    {{/if}}

    {{#if data.dictionary.fl}}
    <p class="dictionary__type">{{data.dictionary.fl}}</p>
    {{/if}}

    <ul>
      {{#each data.dictionary.shortdef}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
    
    <a href="{{data.dictionary.link}}" target="_blank">Find out more &raquo;</a>
  {{/if}}
  